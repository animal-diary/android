<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Center with Illust -->
    <LinearLayout
        android:id="@+id/center_layout_illust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:background="@drawable/bg_select_card_default"
        android:paddingStart="@dimen/padding_lg"
        android:paddingEnd="@dimen/padding_lg"
        android:paddingTop="@dimen/padding_lg"
        android:paddingBottom="@dimen/padding_md">

        <ImageView
            android:id="@+id/card_image_center"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/circle_background_neutral"
            android:src="@drawable/ic_profile_solid"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/card_title_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/fg_neutral_secondary"
            style="@style/Text_Title16Strong"
            android:layout_marginTop="8dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/card_description_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/fg_neutral_tertiary"
            style="@style/Text_Body14Normal"
            android:gravity="center" />
    </LinearLayout>

    <!-- Center without Illust -->
    <LinearLayout
        android:id="@+id/center_layout_no_illust"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone"
        android:background="@drawable/bg_select_card_default"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/title_center_no_illust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/fg_neutral_secondary"
            style="@style/Text_Title16Strong"
            android:gravity="center" />

        <TextView
            android:id="@+id/description_center_no_illust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/fg_neutral_tertiary"
            style="@style/Text_Body14Normal"
            android:gravity="center" />
    </LinearLayout>

    <!-- Left with Illust -->
    <LinearLayout
        android:id="@+id/left_layout_illust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:visibility="visible"
        android:background="@drawable/bg_select_card_default"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <ImageView
            android:id="@+id/card_image_left"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:background="@drawable/circle_background_neutral"
            android:src="@drawable/ic_profile_solid"
            android:layout_marginEnd="12dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/card_title_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/fg_neutral_secondary"
                style="@style/Text_Title16Strong"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/card_description_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="@color/fg_neutral_tertiary"
                style="@style/Text_Body14Normal" />
        </LinearLayout>
    </LinearLayout>

    <!-- Left without Illust -->
    <LinearLayout
        android:id="@+id/left_layout_no_illust"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="start"
        android:visibility="gone"
        android:background="@drawable/bg_select_card_default"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">

        <TextView
            android:id="@+id/title_left_no_illust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/fg_neutral_secondary"
            style="@style/Text_Title16Strong"/>

        <TextView
            android:id="@+id/description_left_no_illust"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/fg_neutral_tertiary"
            style="@style/Text_Body14Normal" />
    </LinearLayout>




</merge>
