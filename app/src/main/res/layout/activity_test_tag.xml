            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:tag_text="Text"
            app:tag_type="pink"
            app:tag_showPlus="false"/>

        <com.example.animaldiary.ui.components.TagView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:tag_text="Text"
            app:tag_type="white"
            app:tag_showPlus="false"/>

        <com.example.animaldiary.ui.components.TagView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:tag_text="Text"
            app:tag_type="orange"
            app:tag_showPlus="false"/>

