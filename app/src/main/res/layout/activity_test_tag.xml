<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 아이콘 있는 -->
        <com.example.animaldiary.ui.components.TagView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:tag_text="Text"
            app:tag_type="gray"
            app:tag_showPlus="true"/>

        <com.example.animaldiary.ui.components.TagView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:tag_text="Text"
            app:tag_type="red"
            app:tag_showPlus="true"/>

        <com.example.animaldiary.ui.components.TagView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:tag_text="Text"
            app:tag_type="green"
            app:tag_showPlus="true"/>

        <com.example.animaldiary.ui.components.TagView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:tag_text="Text"
            app:tag_type="blue"
            app:tag_showPlus="true"/>

        <com.example.animaldiary.ui.components.TagView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:tag_text="Text"
            app:tag_type="yellow"
            app:tag_showPlus="true"/>

        <com.example.animaldiary.ui.components.TagView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:tag_text="Text"
            app:tag_type="pink"
            app:tag_showPlus="true"/>

        <com.example.animaldiary.ui.components.TagView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:tag_text="Text"
            app:tag_type="white"
            app:tag_showPlus="true"/>

        <com.example.animaldiary.ui.components.TagView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:tag_text="Text"
            app:tag_type="orange"
            app:tag_showPlus="true"/>

        <!-- 구분 여백 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lg"/>

        <!-- 아이콘 없음 -->
        <com.example.animaldiary.ui.components.TagView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:tag_text="Text"
            app:tag_type="gray"
            app:tag_showPlus="false"/>

        <com.example.animaldiary.ui.components.TagView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:tag_text="Text"
            app:tag_type="red"
            app:tag_showPlus="false"/>

        <com.example.animaldiary.ui.components.TagView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:tag_text="Text"
            app:tag_type="green"
            app:tag_showPlus="false"/>

        <com.example.animaldiary.ui.components.TagView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            app:tag_text="Text"
