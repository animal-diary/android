<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/modal_root"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_modal_default"
        android:paddingTop="@dimen/padding_2xl"
        android:paddingStart="@dimen/padding_xl"
        android:paddingEnd="@dimen/padding_xl"
        android:paddingBottom="@dimen/padding_xl">

        <LinearLayout
            android:id="@+id/modal_titleContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/modal_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Title"
                android:textColor="@color/fg_neutral_primary"
                style="@style/Text_Title20Strong"/>

            <TextView
                android:id="@+id/modal_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:gravity="center"
                android:text="description"
                android:textColor="@color/fg_neutral_secondary"
                style="@style/Text_Body16Normal"/>
        </LinearLayout>

        <ScrollView
            android:id="@+id/modal_scrollview"
            android:layout_width="280dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/spacing_md"
            android:layout_marginBottom="@dimen/spacing_md">

            <LinearLayout
                android:id="@+id/modal_content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_modal_replace">

                <TextView
                    android:id="@+id/modal_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Replace Contents"
                    android:textColor="@color/fg_neutral_tertiary"
                    style="@style/Text_Body16Normal"
                    android:gravity="center" />
            </LinearLayout>
        </ScrollView>

        <com.example.animaldiary.ui.components.ButtonContainerView
            android:id="@+id/modal_button_container"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bc_alignment="horizontal"
            app:bc_showAdditionalButton="true"
            app:bc_primaryText="Action"
            app:bc_primaryHierarchy="primary"
            app:bc_primaryType="filled"
            app:bc_primarySize="md"
            app:bc_secondaryText="Action"
            app:bc_secondaryHierarchy="secondary"
            app:bc_secondaryType="filled"
            app:bc_secondarySize="md" />
    </LinearLayout>
</merge>