<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/spacing_lg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Default"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnPrimary32Default"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
        android:background="@drawable/btn_primary_bg"
        android:contentDescription="Primary icon button"
        android:clickable="true"
        android:focusable="true"
        app:srcCompat="@drawable/ic_plus_line"
        app:tint="@color/btn_primary_icon_tint" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pressed (preview)"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btnPrimary32Pressed"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:background="@drawable/btn_primary_bg"
            android:contentDescription="Primary icon button (pressed preview)"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_plus_line"
            app:tint="@color/btn_primary_icon_tint" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing_lg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disabled"
            android:layout_marginBottom="@dimen/spacing_sm" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/btn_primary_disabled_bg"
            app:backgroundTint="@null"
            android:padding="4dp"
            app:srcCompat="@drawable/ic_plus_line"
            app:tint="#AFAFAF"
            android:clickable="false"
            android:focusable="false"
            android:enabled="false"/>

    </LinearLayout>
</ScrollView>
