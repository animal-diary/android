<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_no_records_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:background="@color/bg_base">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_no_records"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_marginTop="@dimen/spacing_md"
        android:layout_marginBottom="@dimen/spacing_xl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ll_pet_name"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/bg_health_note">

        <TextView
            android:id="@+id/tv_no_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아직 건강기록이 없어요.\n아이들의 건강을 관리하러 가볼까요?"
            android:textColor="@color/fg_neutral_secondary"
            android:textAlignment="center"
            style="@style/Text_Title16Strong"
            app:layout_constraintBottom_toTopOf="@+id/btn_add_record"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <com.example.animaldiary.ui.components.ActionButtonView
            android:id="@+id/btn_add_record"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:ab_hierarchy="primary"
            app:ab_leftIcon="@drawable/ic_plus_line"
            app:ab_leftIconVisible="true"
            app:ab_size="md"
            app:ab_state="normal"
            app:ab_text="기록 추가하기"
            app:ab_type="filled"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_no_records" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>