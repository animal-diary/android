<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page_white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <FrameLayout
            android:id="@+id/topNavWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationZ="4dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:background="@android:color/transparent">
            <!-- Case 1: 기본 -->
            <com.example.animaldiary.ui.components.TopNavigationView
                android:id="@+id/topNav1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tnv_title="기본"
                app:tnv_leftIcon="@drawable/ic_plus_line"
                app:tnv_rightIcon1="@drawable/ic_plus_line"
                app:tnv_rightIcon2="@drawable/ic_plus_line"
                android:layout_marginBottom="10dp"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/topNavWrapper2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationZ="4dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            android:background="@android:color/transparent">

            <!-- Case 2: 왼쪽 아이콘 1개, 오른쪽 아이콘 1개 -->
            <com.example.animaldiary.ui.components.TopNavigationView
                android:id="@+id/topNav2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tnv_leftIcon="@drawable/ic_chevron_left"
                app:tnv_title="검색만 있음"
                app:tnv_rightIcon1="@drawable/ic_search"
                app:tnv_rightIcon2="@null"
                android:layout_marginBottom="10dp"/>
        </FrameLayout>

        <!-- Case 3: 아이콘 없음 -->
        <com.example.animaldiary.ui.components.TopNavigationView
            android:id="@+id/topNav3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tnv_leftIcon="@drawable/ic_logo_default"
            app:tnv_showTitle="false" />

    </LinearLayout>
</ScrollView>
