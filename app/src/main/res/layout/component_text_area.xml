<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/ta_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title + Required Mark -->
        <LinearLayout
            android:id="@+id/ta_titleContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ta_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textColor="@color/fg_neutral_primary"
                style="@style/Text_Title14Strong"/>

            <TextView
                android:id="@+id/ta_requiredMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:layout_marginStart="@dimen/spacing_xs"
                android:textColor="@color/fg_accent_red_normal"
                style="@style/Text_Title14Strong"/>
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/ta_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="description"
            android:textColor="@color/fg_neutral_tertiary"
            style="@style/Text_Body16Normal"
            android:layout_marginBottom="@dimen/spacing_xs"/>

        <!-- 실제 텍스트 입력 영역 -->
        <EditText
            android:id="@+id/ta_input"
            android:layout_width="match_parent"
            android:layout_height="92dp"
            android:textColor="@color/fg_neutral_tertiary"
            style="@style/Text_Body16Normal"
            android:gravity="top"
            android:padding="@dimen/padding_md"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:background="@drawable/bg_text_input_default"
            android:overScrollMode="always"
            android:scrollbars="vertical"/>

        <!-- Character Count -->
        <TextView
            android:id="@+id/ta_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0/200자"
            android:textColor="@color/fg_neutral_tertiary"
            style="@style/Text_Body14Normal"
            android:gravity="end"
            android:layout_marginTop="@dimen/spacing_xs"/>
    </LinearLayout>
</merge>
