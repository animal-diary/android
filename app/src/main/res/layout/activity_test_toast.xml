<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/spacing_lg">

    <Button
        android:id="@+id/btnNormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show NORMAL" />

    <View android:layout_width="match_parent" android:layout_height="@dimen/spacing_sm"/>

    <Button
        android:id="@+id/btnInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show INFORMATION" />

    <View android:layout_width="match_parent" android:layout_height="@dimen/spacing_sm"/>

    <Button
        android:id="@+id/btnSuccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show SUCCESS" />

    <View android:layout_width="match_parent" android:layout_height="@dimen/spacing_sm"/>

    <Button
        android:id="@+id/btnWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show WARNING" />

    <View android:layout_width="match_parent" android:layout_height="@dimen/spacing_sm"/>

    <Button
        android:id="@+id/btnDanger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show DANGER" />

    <View android:layout_width="match_parent" android:layout_height="@dimen/spacing_md"/>

    <Button
        android:id="@+id/btnSpam"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spam 5 toasts (stack test)" />

    <!-- 바텀 네비게이션 앵커 대용 -->
    <View
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="@dimen/spacing_2xl"
        android:background="@android:color/transparent"/>
</LinearLayout>
