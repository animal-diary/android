<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Avatar 컴포넌트 커스텀 속성 정의 -->
    <declare-styleable name="AvatarView">
        <attr name="showProfile" format="boolean" />
        <attr name="showCamera" format="boolean" />
        <attr name="avatarSize" format="dimension" />
        <attr name="profileImage" format="reference" />
    </declare-styleable>

    <!-- 공통 속성들 -->
    <attr name="showDescription" format="boolean" />
    <attr name="showIllust" format="boolean" />
    <attr name="showIcon" format="boolean" />
    <attr name="illustDrawable" format="reference" />

  <!-- 미리 정의된 아바타 크기들 -->
    <dimen name="avatar_size_small">32dp</dimen>
    <dimen name="avatar_size_medium">48dp</dimen>
    <dimen name="avatar_size_large">64dp</dimen>
    <dimen name="avatar_size_extra_large">80dp</dimen>
    <dimen name="avatar_size_xxl">96dp</dimen>

    <!-- Carousel Item 컴포넌트 커스텀 속성 정의 -->
    <declare-styleable name="CarouselItemView">
        <attr name="showDescription" />
        <attr name="showIllust" />
        <attr name="showIcon" />
        <attr name="showSub" format="boolean" />
        <attr name="carouselTitle" format="string" />
        <attr name="carouselSubTitle" format="string" />
        <attr name="carouselDescription" format="string" />
        <attr name="illustDrawable" />
        <attr name="iconDrawable" format="reference" />
        <attr name="carouselState" format="enum">
            <enum name="normal" value="0" />
            <enum name="focused" value="1" />
            <enum name="pressed" value="2" />
            <enum name="empty" value="3" />
        </attr>
    </declare-styleable>

    <!-- List Item 컴포넌트 커스텀 속성 정의 -->
    <declare-styleable name="ListItemView">
        <attr name="showBackground" format="boolean" />
        <attr name="showIllust" />
        <attr name="showDescription" />
        <attr name="showIcon" />
        <attr name="listTitle" format="string" />
        <attr name="listDescription" format="string" />
        <attr name="illustDrawable" />
        <attr name="listState" format="enum">
            <enum name="normal" value="0" />
            <enum name="pressed" value="1" />
        </attr>
    </declare-styleable>

    <!-- ModalView 컴포넌트 커스텀 속성 정의 -->
    <declare-styleable name="ModalView">
        <attr name="modal_Title" format="string" />
        <attr name="modal_Description" format="string" />
        <attr name="modal_content" format="string" />
        <attr name="leftButtonText" format="string" />
        <attr name="rightButtonText" format="string" />
        <attr name="showTitle" format="boolean" />
        <attr name="showDescription" />
        <attr name="showContent" format="boolean" />
        <attr name="showLeftButton" format="boolean" />
        <attr name="showRightButton" format="boolean" />
        <attr name="modal_align" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
        </attr>
    </declare-styleable>

  <!-- SelectFieldView 컴포넌트 커스텀 속성 정의 -->
    <declare-styleable name="SelectFieldView">
        <attr name="sf_title" format="string" />
        <attr name="sf_description" format="string" />
        <attr name="sf_placeholder" format="string" />
        <attr name="sf_required" format="boolean" />
        <attr name="sf_icon" format="reference" />
        <attr name="sf_errorText" format="string" />
        <attr name="sf_state" format="enum">
            <enum name="normal" value="0" />
            <enum name="focused" value="1" />
            <enum name="error" value="2" />
            <enum name="disabled" value="3" />
        </attr>
    </declare-styleable>

    <!-- SelectCardView 컴포넌트 커스텀 속성 정의 -->
    <declare-styleable name="SelectCardView">
        <attr name="sc_align" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
        </attr>
        <attr name="sc_showIllust" format="boolean"/>
        <attr name="sc_title" format="string" />
        <attr name="sc_description" format="string" />
    </declare-styleable>

    <!-- TopNavigationView 컴포넌트 커스텀 속성 정의 -->
    <declare-styleable name="TopNavigationView">
        <attr name="tnv_title" format="string" />
        <attr name="tnv_showTitle" format="boolean" />
        <attr name="tnv_leftIcon" format="reference" />
        <attr name="tnv_rightIcon1" format="reference" />
        <attr name="tnv_rightIcon2" format="reference" />
    </declare-styleable>

    <!-- TextInputView 컴포넌트 커스텀 속성 정의 -->
    <declare-styleable name="TextInputView">
        <attr name="ti_title" format="string" />
        <attr name="ti_description" format="string" />
        <attr name="ti_placeholder" format="string" />
        <attr name="ti_required" format="boolean" />
        <attr name="ti_icon" format="reference" />
        <attr name="ti_errorText" format="string" />
        <attr name="ti_state" format="enum">
            <enum name="normal" value="0" />
            <enum name="focused" value="1" />
            <enum name="error" value="2" />
            <enum name="disabled" value="3" />
        </attr>
    </declare-styleable>

    <!-- TextAreaView 컴포넌트 커스텀 속성 정의 -->
    <declare-styleable name="TextAreaView">
        <attr name="ta_title" format="string" />
        <attr name="ta_required" format="boolean" />
        <attr name="ta_description" format="string" />
        <attr name="ta_showCount" format="boolean" />
        <attr name="ta_maxLength" format="integer" />
        <attr name="ta_state" format="enum">
            <enum name="normal" value="0" />
            <enum name="focused" value="1" />
            <enum name="disabled" value="2" />
        </attr>
    </declare-styleable>

    <!-- TextButtonView 컴포넌트 커스텀 속성 정의 -->
    <declare-styleable name="TextButtonView">
        <attr name="tb_text" format="string" />
        <attr name="tb_leftIcon" format="reference" />
        <attr name="tb_rightIcon" format="reference" />
        <!-- State 속성 -->
        <attr name="tb_state" format="enum">
            <enum name="normal" value="0" />
            <enum name="pressed" value="1" />
            <enum name="disabled" value="2" />
        </attr>

        <!-- Hierarchy 속성 -->
        <attr name="tb_hierarchy" format="enum">
            <enum name="primary" value="0" />
            <enum name="neutral" value="1" />
        </attr>
    </declare-styleable>

</resources>